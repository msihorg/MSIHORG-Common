@* BlazorTemplate.Web\Components\Pages\Auth\PasswordlessLogin.razor *@
@page "/login"
@using BlazorTemplate.Shared.Web.DTOs
@inject IAuthApiService AuthService
@inject NavigationManager NavigationManager
@inject IToastService ToastService

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
        </div>
        
        <EditForm Model="@loginRequest" OnValidSubmit="HandleSubmit" class="mt-8 space-y-6">
            <DataAnnotationsValidator />

            @if (!linkSent)
            {
                <div class="rounded-md shadow-sm space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Contact Method</label>
                        <select @bind="loginRequest.ContactType" 
                                class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                            <option value="email">Email</option>
                            <option value="phone">Phone Number</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">
                            @(loginRequest.ContactType == "email" ? "Email address" : "Phone number")
                        </label>
                        <input type="@(loginRequest.ContactType == "email" ? "email" : "tel")"
                               @bind="loginRequest.Contact"
                               class="mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="@(loginRequest.ContactType == "email" ? "Enter your email" : "Enter your phone number")" />
                    </div>

                    <ValidationMessage For="@(() => loginRequest.Contact)" class="text-red-500 text-sm" />
                </div>

                <div>
                    <button type="submit" 
                            disabled="@isLoading"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm mr-1" role="status" aria-hidden="true"></span>
                        }
                        Send Login Link
                    </button>
                </div>
            }
            else
            {
                <div class="text-center">
                    <div class="rounded-md bg-blue-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <InformationCircleIcon class="h-5 w-5 text-blue-400" />
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-blue-800">
                                    Login link sent!
                                </h3>
                                <div class="mt-2 text-sm text-blue-700">
                                    <p>
                                        We've sent a login link to your @(loginRequest.ContactType).
                                        Please check your @(loginRequest.ContactType == "email" ? "inbox" : "phone") to continue.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" 
                            @onclick="ResetForm"
                            class="mt-4 text-sm text-indigo-600 hover:text-indigo-500">
                        Try again with a different @(loginRequest.ContactType)
                    </button>
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private PasswordlessLoginRequest loginRequest = new();
    private bool isLoading;
    private bool linkSent;

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(loginRequest.Contact))
        {
            ToastService.ShowError("Please enter your contact information.");
            return;
        }

        try
        {
            isLoading = true;
            var result = await AuthService.InitiatePasswordlessLoginAsync(loginRequest);
            
            if (result.IsSuccess)
            {
                linkSent = true;
                ToastService.ShowSuccess("Login link sent successfully!");
            }
            else
            {
                ToastService.ShowError(result.Error ?? "Failed to send login link.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("An error occurred while processing your request.");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetForm()
    {
        loginRequest = new();
        linkSent = false;
    }
}
